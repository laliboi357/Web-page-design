/*style.css*/

.container {
  position: relative;
  text-align: center;
  color: white;
}

.bottom-left {
  position: absolute;
  bottom: 8px;
  left: 16px;
}

.top-left {
  position: absolute;
  top: 40px;
  left: 16px;
}

.top-right {
  position: absolute;
  top: 8px;
  right: 16px;
}

.bottom-right {
  position: absolute;
  bottom: 8px;
  right: 16px;
}

.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.fade-in {
    animation: fadeIn 2s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.fade-in2 {
    animation: fadeIn  s; ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }

.slide-in {
    animation: slideIn 1s ease-out;
}

@keyframes slideIn {
    from {
        transform: translateX(3%);
    }
    to {
        transform: translateX(0);
    }
}


.scale-up {
    animation: scaleUp 1s ease-in-out;
}

@keyframes scaleUp {
    from {
        transform: scale(0);
    }
    to {
        transform: scale(1);
    }
}


.rotate {
    animation: rotate 1s linear infinite;
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}


.pulse {
    animation: pulse 1s ease-in-out infinite alternate;
}

@keyframes pulse {
    from {
        transform: scale(1);
    }
    to {
        transform: scale(1.1);
    }
}


.bounce {
    animation: bounce 1s ease infinite alternate;
}

@keyframes bounce {
    from {
        transform: translateY(0);
    }
    to {
        transform: translateY(-10px);
    }
}


.infinite-animation {
    animation: slideIn 1s ease-out;
}

@keyframes slideIn {
    from {
        transform: translateX(3%);
    }
    to {
        transform: translateX(0);
    }
.slide-in-element {
  opacity: 0; /* Initially, the element is transparent */
  transform: translateX(-100%); /* Initially, the element is translated outside the viewport */
  animation: slideIn 1.5s ease-in-out infinite; /* Animation with a duration of 1.5s, set to repeat infinitely */
}

@keyframes slideIn {
  from {
    opacity: 0; /* Starting opacity */
    transform: translateX(-100%); /* Starting position, outside the viewport */
  }
  to {
    opacity: 1; /* Ending opacity */
    transform: translateX(0); /* Ending position, fully visible */
  }
}

